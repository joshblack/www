{
  "name": "@joshblack/www",
  "private": true,
  "type": "module",
  "author": "Josh Black <josh@josh.black>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "next build",
    "clean": "rimraf .next build",
    "develop": "next",
    "format": "prettier --write \"**/*.{css,js,md,scss,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{css,js,md,scss,ts}\"",
    "format:staged": "prettier --write",
    "start": "next start"
  },
  "dependencies": {
    "@carbon/icons-react": "^11.36.0",
    "@fec/remark-a11y-emoji": "^4.0.2",
    "@silvenon/remark-smartypants": "^2.0.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "express-graphql": "^0.12.0",
    "feed": "^4.2.2",
    "graphql": "^16.8.1",
    "gray-matter": "^4.0.3",
    "next": "^14.1.0",
    "prismjs": "^1.29.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-axe": "^3.5.4",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-pretty-code": "^0.13.0",
    "remark": "^15.0.1",
    "remark-autolink-headings": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.3",
    "remark-prism": "^1.3.6",
    "sass": "^1.71.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.58",
    "@types/remark-prism": "^1",
    "autoprefixer": "^10.4.17",
    "bright": "^0.8.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "next-mdx-remote": "^4.4.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "remark-smartypants": "^2.1.0",
    "rimraf": "^5.0.5",
    "shiki": "^1.1.7",
    "tailwindcss": "^3.4.1",
    "tm-themes": "^1.2.3",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged"
    ],
    "*.{scss,css}": [
      "yarn format:staged"
    ],
    "*.md": [
      "yarn format:staged"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  },
  "packageManager": "yarn@4.1.0"
}
