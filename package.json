{
  "name": "@joshblack/www",
  "private": true,
  "version": "0.0.0",
  "author": "Josh Black <josh@josh.black>",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "clean": "rimraf .next build",
    "develop": "next",
    "format": "prettier --write \"**/*.{css,js,md,scss,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{css,js,md,scss,ts}\"",
    "format:staged": "prettier --write",
    "start": "next start"
  },
  "dependencies": {
    "@carbon/icons-react": "^10.16.0",
    "@fec/remark-a11y-emoji": "^1.0.0",
    "@silvenon/remark-smartypants": "^1.0.0",
    "chrome-aws-lambda": "^5.2.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.16.0",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "gray-matter": "^4.0.2",
    "next": "^9.5.2",
    "playwright": "^1.3.0",
    "prismjs": "^1.21.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-axe": "^3.5.3",
    "react-dom": "^16.13.1",
    "reading-time": "^1.2.0",
    "remark": "^12.0.1",
    "remark-autolink-headings": "^6.0.1",
    "remark-html": "^12.0.0",
    "remark-preset-lint-markdown-style-guide": "^3.0.1",
    "sass": "^1.26.10",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged"
    ],
    "*.{scss,css}": [
      "yarn format:staged"
    ],
    "*.md": [
      "yarn format:staged"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  }
}
