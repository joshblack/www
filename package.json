{
  "name": "@joshblack/www",
  "private": true,
  "version": "0.0.0",
  "author": "Josh Black <josh@josh.black>",
  "license": "MIT",
  "scripts": {
    "build": "next build && next export -o build",
    "clean": "rimraf .next build",
    "develop": "next",
    "format": "prettier --write \"**/*.{css,js,md,scss,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{css,js,md,scss,ts}\"",
    "format:staged": "prettier --write",
    "start": "next start"
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "next": "^9.3.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "remark": "^12.0.0",
    "remark-html": "^11.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged"
    ],
    "*.{scss,css}": [
      "yarn format:staged"
    ],
    "*.md": [
      "yarn format:staged"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  }
}
