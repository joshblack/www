{
  "name": "@joshblack/www",
  "private": true,
  "version": "0.0.0",
  "author": "Josh Black <josh@josh.black>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "next build",
    "clean": "rimraf .next build",
    "develop": "next",
    "format": "prettier --write \"**/*.{css,js,md,scss,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{css,js,md,scss,ts}\"",
    "format:staged": "prettier --write",
    "start": "next start"
  },
  "dependencies": {
    "@carbon/icons-react": "^10.20.0",
    "@fec/remark-a11y-emoji": "^2.0.0",
    "@silvenon/remark-smartypants": "^1.0.0",
    "chrome-aws-lambda": "^5.3.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.16.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.4.0",
    "gray-matter": "^4.0.2",
    "next": "^11.1.1",
    "playwright": "^1.5.2",
    "prismjs": "^1.22.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-axe": "^3.5.4",
    "react-dom": "^17.0.1",
    "reading-time": "^1.2.0",
    "remark": "^13.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-html": "^13.0.1",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "sass": "^1.28.0",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged"
    ],
    "*.{scss,css}": [
      "yarn format:staged"
    ],
    "*.md": [
      "yarn format:staged"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "always"
  }
}
