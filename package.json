{
  "name": "@joshblack/www",
  "type": "module",
  "private": true,
  "author": "Josh Black <josh@josh.black>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "astro build",
    "clean": "",
    "develop": "astro dev",
    "format": "prettier --write \"**/*.{css,js,md,scss,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{css,js,md,scss,ts}\"",
    "format:staged": "prettier --write",
    "lint": "eslint . --max-warnings=0",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "preview": "astro preview"
  },
  "devDependencies": {
    "astro": "^4.11.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs}": [
      "yarn format:staged",
      "eslint --fix"
    ],
    "*.{scss,css}": [
      "yarn format:staged"
    ],
    "*.md": [
      "yarn format:staged"
    ]
  },
  "packageManager": "yarn@4.1.1",
  "dependencies": {
    "@astrojs/vercel": "^7.7.2"
  }
}
